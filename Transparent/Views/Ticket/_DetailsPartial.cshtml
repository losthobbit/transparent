@model Transparent.Data.Models.BaseTicket
@using Transparent.Extensions;
<fieldset class="ticket @Model.TicketType.GetClass()">
    <legend>Ticket</legend>

    <div class="display-field">
        <h3>@Html.DisplayFor(model => model.TicketType): @Html.DisplayFor(model => model.Heading)</h3>
    </div>
    <div>
        @if (ViewBag.ShowRank == null || ViewBag.ShowRank)
        {
        <div class="float-left" style="text-align:center">         
            @Html.Action("_Rank", Model)
        </div>
        }
        <div class="display-field">
            @Html.DisplayFor(model => model.Body)
        </div>
        <div class="metadata">
            <div>
                @foreach (var ticketTag in Model.TicketTags)
                {
                    if(ViewBag.EnableTagButton == null || ViewBag.EnableTagButton)
                    {
                        <a class="button float-left" href="@Url.Action("Details", "Tag", new { id = ticketTag.FkTagId })">@ticketTag.Tag.Name</a>
                    }
                    else
                    {
                        <a class="button float-left">@ticketTag.Tag.Name</a>
                    }
                }
            </div>
            <div class="float-right">
                @Model.TextForCreated at @Html.DisplayFor(model => model.CreatedDate)
            </div>
        </div>
    </div>
</fieldset>