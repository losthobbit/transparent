<header>
    <ul id="menu" class="left main">
        @{var links = new []
            {
                new []{ "My Queue", "MyQueue" },
                new []{ "Highest Ranked", "HighestRanked" },
                new []{ "Newest", "Newest" },
                new []{ "Raised by Me", "RaisedByMe" },
                new []{ "Search", "Search" },
                new []{ "Create", "Create" },
                new []{ "Knowledge", "Details", "Tag" },
                new []{ "Mark Tests", "MarkTests" },
                new []{ "Volunteer", "Volunteer" }
            };
        }
        @foreach(var link in links)
        {
            <li>
            @if (ViewBag.Title == link[0])
            {
                <b>@MvcHtmlString.Create(link[0])</b>
            }
            else
            {
                @Html.ActionLink(link[0], link[1], link.Length > 2 ? link[2] : "Ticket");
            }
            </li>
        }
    </ul>
</header>