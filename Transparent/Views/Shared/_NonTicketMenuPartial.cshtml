<nav class="menu gap-above">
    @{var links = new []
        {
            new []{ "Learn", "Details", "Tag" },
            new []{ "Volunteer", "Volunteer", "Volunteer" },
            new []{ "Volunteers", "Volunteers", "Volunteer" }
        };
    }
    @foreach(var link in links)
    {
        if (ViewBag.Title == link[0])
        {
            <span>@MvcHtmlString.Create(link[0])</span>
        }
        else
        {
            @Html.ActionLink(link[0], link[1], link[2]);
        }
    }
</nav>
