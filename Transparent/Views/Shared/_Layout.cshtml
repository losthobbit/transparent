@using Transparent.Data
@using Castle.Windsor
@using Transparent.Data.Interfaces

@{
    var container = ((IContainerAccessor)Context.ApplicationInstance).Container;
    var configuration = container.Resolve<IConfiguration>();
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - @Transparent.Data.Constants.ApplicationName</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
        <script src="/Scripts/general-0001.js"></script>
        <script src="/Scripts/controls-0001.js"></script>
        <script src="/Scripts/custom.validation-0001.js"></script>
    </head>
    <body>
        <header class="main">
            <div class="top">
                <div class="content-wrapper">
                    <div class="float-left">
                        <p class="site-title">@Html.ActionLink(Constants.ApplicationName, "Index", "Home")</p>
                        <div class="metadata">A Self-improving, Transparent, Democratic, Meritocratic, International System</div>
                    </div>
                    <div class="float-right">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                        <nav>
                            <ul id="menu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="content-wrapper">
                <div class="float-left">
                    <h3>@Html.ActionLink("Main goal: " + Constants.Goal + ".", "MainGoal", "Home")</h3>
                    @Html.ActionLink("Current subgoal: " + configuration.CurrentSubgoal + ".", "Subgoal", "Home")
                </div>
                <div class="float-right gap-above">
                    @Html.Partial("_NonTicketMenuPartial")
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </body>
</html>
