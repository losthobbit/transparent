@model Transparent.ViewModels.Admin.CreateTagViewModel

@{
    ViewBag.Title = "CreateTag";
}

<h2>Create a Tag</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateTagViewModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ParentIds)
        </div>
        <div class="editor-field">
            <select multiple="multiple" name="parentIds" id="parentIds">
                @foreach(var indentedTag in Model.AllTags)
                {
                    var indentString = String.Join("", Enumerable
                        .Range(1, indentedTag.Indent * 3)
                        .Select(n => "&nbsp;"));
                    <option value="@(indentedTag.Id)">@Html.Raw(indentString)@(indentedTag.Name)</option>
                }
            </select>
        </div>
        <div>
            @Html.ValidationMessageFor(model => model.ParentIds)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
