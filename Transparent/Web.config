  <appSettings>
    <!-- DEBUG SETTINGS! THESE WILL ALL GET REPLACED DURING DEPLOYMENT! -->
    <add key="webpages:Version" value="2.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />

    <!-- General -->
    <add key="CurrentSubgoal" value="Increase the number of registered users to 100,000" />

    <!-- Points -->

    <!-- Taking tests -->
    <add key="PointsRequiredBeforeDeductingPoints" value="20" />
    <add key="PointsToDeductWhenStartingTest" value="20" />
    <add key="PointsForPassingATest" value="20" />
    <add key="MarkersRequiredPerTest" value="2" />
    <add key="PointsMarkersGainForAgreeingATestResult" value="10" />
    <add key="PointsMarkersLoseForDisagreeingATestResult" value="10" />

    <!-- A user is competent in a tag if any of the following are true:
    1. Their score is in the top MinPercentCompetents % of all users.  This needs to be reconsidered, since parent tags are not taken into account.
    2. Their score is in the top MinCompetents of all users.
    3. Their score is in the top CompetentPercentOfHighestScore % of the highest score for that tag.-->
    <add key="MinPercentCompetents" value="10" />
    <add key="MinCompetents" value="2" />
    <add key="CompetentPercentOfHighestScore" value="50" />

    <!-- A user is an expert in a tag if any of the following are true:
    1. Their score is in the top MinPercentExperts % of all users.  This needs to be reconsidered, since parent tags are not taken into account.
    2. Their score is in the top MinExperts of all users.
    3. Their score is in the top ExpertPercentOfHighestScore % of the highest score for that tag.-->
    <add key="MinPercentExperts" value="5" />
    <add key="MinExperts" value="2" />
    <add key="ExpertPercentOfHighestScore" value="75" />

    <add key="DiPointsForAcceptedTicket" value="2" />
    <add key="DiPointsForVolunteering" value="10" />
    <add key="DiPointsForFirstBadge" value="2" />

    <!-- Progressing tickets to next state -->
    <add key="MaxPositionToAdvanceState" value="2" />
    <add key="MinimumNumberOfArgumentsToAdvanceState" value="0" />
    <add key="MinimumNumberOfAnswersToAdvanceState" value="1" />
    <add key="PercentOfVotesRequiredToAccept" value="60" />

    <!-- Delays for high speed testing -->
    <add key="DelayAfterValidatingTags" value="00:01:00" />
    <add key="DelayAfterDiscussion" value="00:01:00" />
    <add key="DelayForVoting" value="00:01:00" />

    <!-- Technical configuration -->
    <add key="MinEventInterval" value="00:01:00" />
    <!-- Recommended setting: true for high traffic, false for low traffic -->
    <add key="RunEventsAsync" value="false" />

    <!-- Intervals for high speed testing -->
    <add key="CompleteTagValidationEventInterval" value="00:01:00" />
    <add key="CompleteDiscussionEventInterval" value="00:01:10" />
    <add key="CompleteVotingEventInterval" value="00:01:20" />
    <add key="UpdateTagsEventInterval" value="00:01:30 "/>
  </appSettings>
